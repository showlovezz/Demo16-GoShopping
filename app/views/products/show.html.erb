<section class="product_show">
	<div class="product_info">
		<div class="container">
			<div class="row">
				<div class="col-5">
					<%= image_tag @product.product_image_url, class: "img-fluid" %>
				</div>
				<div class="col-7">
					<h1><%= @product.name %></h1>
					<h4>
						<span class="badge badge-info"><%= @product.category.name %></span>
					</h4>
					<hr class="hr_item">
					<h3>
						<h3>優惠價：<span><%= @product.product_price %></span>元</h3>
					</h3>
					<!-- group bottom -->
					<div class="product_item">
						<%= link_to "放入我的購物車", "#", class: "btn btn-secondary btn_item" %>
						<%= link_to "加入下次再買清單", "#", class: "btn btn-light btn_item" %>
						<%= link_to "直接結帳", "#", class: "btn btn-warning btn_item" %>
					</div>
				</div>
			</div>
		</div>
		<!-- nav -->
		<div class="product_nav">
			<div class="container">
				<ul class="nav justify-content-start">
				  <li class="nav-item">
				    <a class="nav-link active" href="#">產品介紹</a>
				  </li>
				  <li class="nav-item">
				    <a class="nav-link" href="#">訂購須知</a>
				  </li>
				  <li class="nav-item">
				    <a class="nav-link" href="#">消費者商品評鑑</a>
				  </li>
				</ul>
			</div>
		</div>	
	</div>
</section>
<!-- col-md-6 -->