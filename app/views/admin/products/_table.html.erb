<table class="table table-striped table-bordered mb-0">
	<caption>List of Products</caption>
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <% @products.each do |product| %>
	  <tbody>
	    <tr>
	      <th scope="row"><%= product.id %></th>
	      <td><%= product.name %></td>
	      <td>$<%= product.product_price %></td>
	      <td><%= truncate(product.description, length: 85) %></td>
	      <td colspan="3">
	      	<%= link_to edit_admin_product_path(product), class: "icon icon1" do %>
	      		<i class="fas fa-edit mr-3"></i>
	      	<% end %>
	      	<%= link_to admin_product_path(product), method: :delete, data: {confirm:"Are you sure?"}, class: "icon icon2" do %>
	      		<i class="far fa-minus-square"></i>
	      	<% end %>
	      </td>
	    </tr>
	  </tbody>
	<% end %>
</table>
<div>
	<%= paginate @products %>
</div>
