<section class="mains_products_index">
	<div class="container-fluid">
		<div class="row">
			<!-- left sidebar -->
			<div class="sidebar col-12 col-sm-4 col-md-4 col-lg-2 mt-4">
				<%= render "admin/shared/sidebar" %>
			</div>

			<!-- right content -->
			<div class="sidecontent col-12 col-sm-8 col-md-8 col-lg-10 mt-4">
				<!-- breadcrumb -->
				<nav aria-label="breadcrumb">
				  <ol class="breadcrumb">
				    <li class="breadcrumb-item" aria-current="page">
				    	<%= link_to "Home", admin_root_path, class: "breadcrumb-item-item" %>
				    </li>
				    <li class="breadcrumb-item" aria-current="page">
				    	<%= link_to "Products", admin_products_path, class: "breadcrumb-item-item" %>
				  	</li>
				  </ol>
				</nav>

				<div class="widget">
					<div class="widget-header">
						<h5 class="mb-0">Tabs</h5>
					</div>
					<div class="widget-body">
						<!-- nav -->
						<ul class="nav nav-tabs mt-3 mb-4" id="myTab" role="tablist">
						  <li class="nav-item">
						    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">
						    	<i class="far fa-list-alt mr-1"></i>List
						    </a>
						  </li>
						  <li class="nav-item">
						    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">
						    	<i class="far fa-plus-square mr-1"></i>New Product
						    </a>
						  </li>
						  <li class="nav-item">
						    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">
						    	<i class="fas fa-file-export mr-1"></i>Export
						    </a>
						  </li>
						</ul>
						<div class="tab-content" id="myTabContent">
						  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
						  	<!-- products -->
						  	<%= render "table" %>
						  </div>
						  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
						  	<!-- new form -->
								<%= render "form" %>
						  </div>
						  <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">Text....</div>
						</div>
					</div>
				</div>
			</div>
		
		</div>
	</div>
</section>