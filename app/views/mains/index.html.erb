<section class="goshopping">
	<!-- jumbotron -->
	<div class="jumbotron jumbotron-fluid">
	  <div class="container text-center">
	    <h1 class="display-4">電子商務網站</h1>
	    <p class="lead">有看到喜歡的，歡迎選購，買越多越划算喔 !</p>
	  </div>
	</div>
	<div class="container-fluid">
		<div class="row">
			<!-- product list-group -->
			<div class="col-12 col-sm-5 col-md-3 col-lg-3">
				<div class="card">
					<div class="product_list">
			  		<i class="far fa-lightbulb"></i>
			    	<h5 class="card-title">產品分類</h5>
			  	</div>
				  <div class="card-body">
						<ul class="list-group">
						  <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
						    <%= link_to "全部產品分類", root_path, class: "text-dark" %>
						    <span class="badge badge-dark badge-pill"><%= @products.count %></span>
						  </li>
						  <% @categories.each do |category| %>
							  <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
							    <%= link_to category.name, category_path(category), class: "text-dark" %>
							    <span class="badge badge-dark badge-pill"><%= category.products.count %></span>
							  </li>
							<% end %>
						</ul>
				  </div>
				</div>
			</div>
			<!-- product -->
			<div class="col-12 col-sm-7 col-md-9 col-lg-9">
				<div class="row">
					<%= render "shared/product_list" %>
				</div>
			</div>
		</div>
	</div>
</section>